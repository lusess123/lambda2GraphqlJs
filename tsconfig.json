{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "lib": [
      "dom",
      "es6"
    ],
    "allowJs": true,
    "downlevelIteration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ]
}
